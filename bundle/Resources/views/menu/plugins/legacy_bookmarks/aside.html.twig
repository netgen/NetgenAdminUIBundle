{% if is_granted( 'ez:content:bookmark' ) %}
    <li class="aside-dropdown">
        <a class="aside-dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bookmark"></i>
            <span class="tt">{{ 'netgen_admin_ui.menu.bookmarks'|trans }}</span>
            <span class="caret"></span>
        </a>

        <div class="dropdown-menu dropdown-cache">
            <div id="bookmarks">
                {% if ui_context != 'browse' %}
                    {% if ui_context == 'edit' %}
                        <h4><span class="disabled">{{ 'netgen_admin_ui.menu.bookmarks'|trans }}</span></h4>
                    {% else %}
                        <h4>{{ 'netgen_admin_ui.menu.bookmarks'|trans }}</h4>
                    {% endif %}
                {% endif %}

                <div class="box-content">
                    {% include 'design:toolbar/full/admin_bookmarks.tpl' %}
                </div>
            </div>
        </div>
    </li>
{% endif %}

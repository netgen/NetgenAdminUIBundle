<p class="path">
    <span class="path-here-text">{{ 'netgen_admin_ui.layout.path.you_are_here'|trans }}</span>

    {% for path_item in path_array %}
        {% if ui_context != 'edit' %}
            {% if path_item.url_alias is defined and path_item.url_alias is not same as( false ) %}
                <a class="path" href="{{ path_item.url_alias }}">{{ path_item.text }}</a>
            {% elseif path_item.url is not same as( false ) %}
                <a class="path" href="{{ path_item.url }}">{{ path_item.text }}</a>
            {% else %}
                <span class="path">{{ path_item.text }}</span>
            {% endif %}
        {% else %}
            <span class="disabled">{{ path_item.text }}</span>
        {% endif %}

        {% if not loop.last %}
            <span class="slash">/</span>
        {% endif %}
    {% endfor %}
&nbsp;</p>

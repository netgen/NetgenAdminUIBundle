{% if rules is not empty %}
    <p>{{ 'netgen_admin_ui.layouts.mappings.order_note'|trans }}</p>

    <ul class="mapped-layout-list">
        <li class="layout-list-head">
            <div class="layout-name">{{ 'netgen_admin_ui.layouts.mappings.mapped_layout'|trans }}</div>
            <div class="layout-target">{{ 'netgen_admin_ui.layouts.mappings.targets'|trans }}</div>
            <div class="layout-conditions">{{ 'netgen_admin_ui.layouts.mappings.conditions'|trans }}</div>
            <div class="layout-actions"></div>
        </li>
        {% for rule in rules %}
            {{ ngbm_render_rule(rule, {}, 'ngadminui') }}
        {% endfor %}
    </ul>
{% else %}
    <p>{{ 'netgen_admin_ui.layouts.mappings.no_rules'|trans }}</p>
{% endif %}

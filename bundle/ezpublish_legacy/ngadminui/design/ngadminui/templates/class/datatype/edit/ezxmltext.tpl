<div class="block form-inline">
   <div class="form-group">
        <label>{'Preferred number of rows'|i18n( 'design/standard/class/datatype' )}:</label>
        <select class="form-control" name="ContentClass_ezxmltext_cols_{$class_attribute.id}">
            <option value="2"  {if eq( $class_attribute.data_int1,  2 )}selected="selected"{/if}>2</option>
            <option value="5"  {if eq( $class_attribute.data_int1,  5 )}selected="selected"{/if}>5</option>
            <option value="10" {if eq( $class_attribute.data_int1, 10 )}selected="selected"{/if}>10</option>
            <option value="15" {if eq( $class_attribute.data_int1, 15 )}selected="selected"{/if}>15</option>
            <option value="20" {if eq( $class_attribute.data_int1, 20 )}selected="selected"{/if}>20</option>

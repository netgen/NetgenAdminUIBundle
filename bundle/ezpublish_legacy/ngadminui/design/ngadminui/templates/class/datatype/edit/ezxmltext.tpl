        </select>
    </div>

    <div class="form-group">
        <label>{'Tag preset'|i18n( 'design/standard/class/datatype' )}:</label>
        <select class="form-control" name="ContentClass_ezxmltext_tagpreset_{$class_attribute.id}">
        {def $tag_preset_list = ezini( 'TagSettings', 'TagPresets', 'ezxml.ini' )}
            <option value="">{'Default'|i18n( 'design/standard/content/datatype' )}</option>
            {foreach $tag_preset_list as $presetKey => $presetName}
                <option value="{$presetKey|wash()}"{if eq( $presetKey, $class_attribute.data_text2 )} selected="selected"{/if}>{$presetName|wash()}</option>
            {/foreach}
        {undef $tag_preset_list}
        </select>
    </div>
</div>